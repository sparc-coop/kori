@page "/"


<article id="kori-example">
    <h1>@K["Hi. Welcome to Kori."]</h1>
    <h2>@K["Here we are testing the server-side translation."]</h2>
    <p>Here we are testing the JS-driven translation.</p>
</article>

@inject Sparc.Kori.KoriLocalizer K
@code {
    protected override async Task OnInitializedAsync() => await K.InitializeAsync();
    protected override async Task OnAfterRenderAsync(bool firstRender) => await K.OnAfterRenderAsync("#kori-example", firstRender);
}