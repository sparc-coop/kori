    let lottieFiles = document.querySelectorAll(".kori-animation__lottie");
    

    lottieFiles.forEach((player) => {
        player.addEventListener("ready", () => {
            let idString = "#" + player.id;
            console.log(idString);
            LottieInteractivity.create({
                player: idString,
                mode:"cursor",
                actions: [ { type: "hover", forceFlag: false } ]
            });
        });
    });
